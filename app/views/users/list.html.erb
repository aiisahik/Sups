<% @page_title = "Users List" %>


<h2>Users</h2>

<%= link_to('Add New User', {:action => 'new'}, :class => 'btn-primary') %>
<p>
<div><%= pluralize(@users.size, 'user') %> found</div>
<p>

<div class="row">
  <div class="span8">
      <table class="table table-striped table-bordered table-condensed">

          <thead>
              <tr>
                <th width="50">ID</th>
                <th width="150">Username</th>
                <th width="150">Email</th>
                <th width="150">Actions </th>
              </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= link_to user.username, user %> </td>
                <td><%= mail_to(user.email) %></td>
                <td><%= link_to('Edit', {:action => 'edit', :id => user.id}, :class => 'btn-primary') %>
                  <%= link_to('Delete', {:action => 'delete', :id => user.id}, :class => 'btn-primary') %></td>
              </tr>
          <% end %>
          </tbody>

      </table>
  </div>
  <div class="span4"></div>
</div>

