<% @page_title = "Users List" %>

<%= link_to("<< Back to Menu", {:controller => 'access', :action => 'menu'}, :class => 'back-link') %>

<div class="user list">
  <h2>Users</h2>

  <%= link_to('Add New User', {:action => 'new'}, :class => 'action new') %>

  <div><%= pluralize(@users.size, 'user') %> found</div>
  
  <table style="width: auto">
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |user| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td>
        <%= link_to user.username, user %>
      </td>
      <td><%= mail_to(user.email) %></td>
      <td class="actions">
        <%= link_to('Edit', {:action => 'edit', :id => user.id}, :class => 'action edit') %>
        <%= link_to('Delete', {:action => 'delete', :id => user.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>

</div>
