<% @page_title = "Collection List" %>


<h2>Collections</h2>

<%= link_to('Add New Collection', {:action => 'new'}, :class => 'btn-primary') %>
<p>
<div> <%= pluralize(@collections.size, 'collection') %> found</div>
<p>

<div class="row">
  <div class="span8">
      <table class="table table-striped table-bordered table-condensed">

          <thead>
              <tr>
                <th width="50">ID</th>
                <th width="150">Name</th>
                <th width="150">Description</th>
                <th width="150">Actions </th>
              </tr>
          </thead>
          <tbody>
          <% @collections.each do |collection| %>
              <tr>
                <td><%= collection.id %></td>
                <td><%= link_to collection.name, collection %> </td>
                <td><%= link_to collection.description, collection %></td>
                <td><%= link_to('Edit', {:action => 'edit', :id => collection.id}, :class => 'btn-primary') %>
                  <%= link_to('Delete', {:action => 'delete', :id => collection.id}, :class => 'btn-primary') %></td>
              </tr>
          <% end %>
          </tbody>

      </table>
  </div>
  <div class="span4"></div>
</div>

